{% extends 'base.html.twig' %}

{% block title %}Sortir.com | Profil{% endblock %}

{% block main %}

    <h1 class="app-main-title"> Profil de {{ participant.userName }} du campus de {{ participant.campus.name }}</h1>

    {% if participant.pictureName != null %}
    <div>
        <img class="app-profile-picture app-framed" alt="Photo de profil de {{ participant.userName }}" src="{{asset('images/pictures/'~participant.pictureName)}}">
    </div>
    {% endif %}

    <div class="app-form-container app-profile-container app-framed">
        <p><span class="app-profile-label"> Nom :</span> {{ participant.name }}</p><br>
        <p><span class="app-profile-label"> Prénom :</span> {{ participant.firstName }}</p><br>
        <p><span class="app-profile-label"> Mail :</span> {{ participant.mail }}</p><br>
        <p><span class="app-profile-label"> Téléphone :</span> {{ participant.phone }}</p><br>

    <div class="app-form-btn-container app-separate-btns">
        {% if participant.userName == app.user.username %}
            <button type="button" class="app-btn"><a class="app-btn-link"
                                     href="{{ path('participant_update',{id: participant.id}) }}">Modifier</a></button>
        {% endif %}
        <button class="app-btn"><a class="app-btn-link" href="{{ path('main_home') }}">Retour</a></button>

    </div>
    </div>


{% endblock %}

