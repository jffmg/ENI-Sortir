{% extends 'base.html.twig' %}

{% block title %}Modification de la sortie {{ event.name }} | {{ parent() }}{% endblock %}

{% block main %}
	<h1 class="app-main-title">DÃ©tails de la sortie</h1>

	<div class="app-form-container">
		{{ form_start(eventForm) }}
		<p class="app-add-form-container"><span
					class="app-profile-label"> {{ form_label(eventForm.name) }}</span><span class="app-form-error">{{ form_errors(eventForm.name) }}</span> {{ form_widget(eventForm.name) }}
		</p>
		<br>
		<p class="app-add-form-container"><span
					class="app-profile-label"> {{ form_label(eventForm.dateTimeStart) }}</span><span class="app-form-error">{{ form_errors(eventForm.dateTimeStart) }}</span> {{ form_widget(eventForm.dateTimeStart) }}
		</p><br>
		<p class="app-add-form-container"><span
					class="app-profile-label"> {{ form_label(eventForm.duration) }}</span><span class="app-form-error">{{ form_errors(eventForm.duration) }}</span> {{ form_widget(eventForm.duration) }}
		</p><br>
		<p class="app-add-form-container"><span
					class="app-profile-label"> {{ form_label(eventForm.nbInscriptionsMax) }}</span><span class="app-form-error">{{ form_errors(eventForm.nbInscriptionsMax) }}</span> {{ form_widget(eventForm.nbInscriptionsMax) }}
		</p><br>
		<p class="app-add-form-container"><span
					class="app-profile-label"> {{ form_label(eventForm.infosEvent) }}</span><span class="app-form-error">{{ form_errors(eventForm.infosEvent) }}</span> {{ form_widget(eventForm.infosEvent) }}
		</p><br>

		<p><span class="app-profile-label">Campus</span><span class="app-form-field">{{ app.user.campus.name }}</span>
		</p><br>
		<p class="app-add-form-container"><label for="event-city" class="app-profile-label">Ville</label>
			<select id="event-city" name="event-city" onchange="getLocations()" required>
				<option value="{{ event.location.city.id }}">{{ event.location.city.name }}</option>
				{% for c in cities %}
					<option value="{{ c.id }}">{{ c.name }}</option>
				{% endfor %}
			</select>
		</p><br>

		<p class="app-add-form-container"><label for="event-location" class="app-profile-label">Lieu</label>
			<select id="event-location" name="event-location"  onchange="getInfos()" required>
				<option value="{{ event.location.id }}">{{ event.location.name }}</option>
			</select>
		</p><br>
		<p class="app-add-form-container"><label for="event-street" class="app-profile-label">Rue</label></p><span id="event-street" class="app-form-field">{{ event.location.street }}</span><br>
		<p class="app-add-form-container"><label for="event-zipcode" class="app-profile-label">Code postal</label><span id="event-zipcode" class="app-form-field">{{ event.location.city.zipCode }}</span></p><br>
		<p class="app-add-form-container"><label for="event-latitude" class="app-profile-label">Latitude</label><span id="event-latitude" class="app-form-field">{{ event.location.latitude }}</span></p><br>
		<p class="app-add-form-container"><label for="event-longitude" class="app-profile-label">Longitude</label><span id="event-longitude" class="app-form-field">{{ event.location.longitude }}</span></p><br>
		<p class="app-add-form-container"><span
					class="app-profile-label"> {{ form_label(eventForm.dateEndInscription) }}</span><span class="app-form-error">{{ form_errors(eventForm.dateEndInscription) }}</span> {{ form_widget(eventForm.dateEndInscription) }}
		</p><br>

	</div>
	<div class="app-form-btn-container">
		<button class="app-btn" type="submit">Modifier la sortie</button>
		<button class="app-btn"><a class="app-btn-link" href="{{ path('main_home') }}">Retour</a></button>
	</div>
	{{ form_end(eventForm) }}
{% endblock %}

{% block scripts %}
	<script src="{{ asset('js/locationByCity.js') }}"></script>
{% endblock %}